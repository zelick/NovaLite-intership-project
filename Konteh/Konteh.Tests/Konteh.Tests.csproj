      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="NUnit3TestAdapter" Version="4.6.0" />
    <PackageReference Include="Respawn" Version="6.2.1" />
    <PackageReference Include="Verify.NUnit" Version="26.4.5" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Konteh.Domain\Konteh.Domain.csproj" />
    <ProjectReference Include="..\Konteh.FrontOfficeApi\Konteh.FrontOfficeApi.csproj" />
    <ProjectReference Include="..\Konteh.Infrastructure\Konteh.Infrastructure.csproj" />
